<div id="<%= dom_id(sub_task) %>" class="group relative flex items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100">
  <%= link_to task_sub_task_path(sub_task.task, sub_task), data: { turbo_frame: "sub_task_details" }, class: "flex-1 flex items-center" do %>
    <div class="flex-shrink-0">
      <%= button_to toggle_task_sub_task_path(sub_task.task, sub_task), method: :patch, class: "flex items-center" do %>
        <div class="w-5 h-5 border-2 rounded <%= sub_task.completed? ? 'bg-green-500 border-green-500' : 'border-gray-300' %> flex items-center justify-center">
          <% if sub_task.completed? %>
            <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="ml-3 flex-1">
      <p class="text-sm font-medium text-gray-900 <%= 'line-through' if sub_task.completed? %>">
        <%= sub_task.title %>
      </p>
      <% if sub_task.deadline %>
        <p class="text-xs text-gray-500">
          Due: <%= sub_task.deadline.strftime("%b %d, %Y %H:%M") %>
        </p>
      <% end %>
    </div>
  <% end %>

  <div class="absolute right-2 hidden group-hover:flex items-center space-x-2">
    <%= button_to edit_task_sub_task_path(sub_task.task, sub_task), method: :get, class: "text-gray-400 hover:text-gray-500" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
      </svg>
    <% end %>

    <%= button_to task_sub_task_path(sub_task.task, sub_task), method: :delete, class: "text-gray-400 hover:text-red-500", data: { confirm: "Are you sure?" } do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
      </svg>
    <% end %>
  </div>
</div>
