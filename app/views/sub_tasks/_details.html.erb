<div class="bg-white rounded-lg shadow-lg p-6">
  <div class="flex items-center justify-between mb-4">
    <h3 class="text-xl font-medium">
      <%= sub_task.title %>
    </h3>
    <span class="px-3 py-1 text-sm rounded-full <%= sub_task.completed? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
      <%= sub_task.completed? ? 'Completed' : 'In Progress' %>
    </span>
  </div>

  <div class="space-y-4">
    <div>
      <h4 class="text-sm font-medium text-gray-500">Description</h4>
      <p class="mt-1 text-gray-900"><%= sub_task.description %></p>
    </div>

    <div class="flex space-x-6">
      <div>
        <h4 class="text-sm font-medium text-gray-500">Created</h4>
        <p class="mt-1 text-gray-900"><%= sub_task.created_at.strftime("%b %d, %Y %H:%M") %></p>
      </div>

      <% if sub_task.deadline %>
        <div>
          <h4 class="text-sm font-medium text-gray-500">Deadline</h4>
          <p class="mt-1 text-gray-900"><%= sub_task.deadline.strftime("%b %d, %Y %H:%M") %></p>
        </div>
      <% end %>

      <% if sub_task.completed? %>
        <div>
          <h4 class="text-sm font-medium text-gray-500">Completed</h4>
          <p class="mt-1 text-gray-900"><%= sub_task.completed_at.strftime("%b %d, %Y %H:%M") %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
