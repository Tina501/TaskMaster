<%= form_with model: @task, local: true, class: "space-y-4" do |form| %>
  <div>
    <%= form.label :title, class: "block text-gray-700 font-semibold" %>
    <%= form.text_field :title, class: "w-full px-3 py-2 border rounded-lg" %>
  </div>

  <div>
    <%= form.label :deadline, class: "block text-gray-700 font-semibold" %>
    <%= form.datetime_select :deadline, class: "w-full px-3 py-2 border rounded-lg" %>
  </div>

  <div>
    <%= form.label :priority, class: "block text-gray-700 font-semibold" %>
    <%= form.select :priority, [1, 2, 3], {}, class: "w-full px-3 py-2 border rounded-lg" %>
  </div>

  <%= form.submit "Save Task", class: "px-6 py-2 bg-blue-500 text-white rounded-lg" %>
<% end %>
