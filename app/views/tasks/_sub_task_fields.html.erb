<div class="nested-fields bg-gray-50 rounded-lg p-6 mb-4" data-new-record="<%= f.object.new_record? %>">
  <div class="flex items-center justify-between mb-4">
    <h4 class="text-sm font-medium text-gray-900">Subtask Details</h4>
    <button type="button"
            data-action="click->nested-form#remove"
            class="text-gray-400 hover:text-red-500 focus:outline-none">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
      </svg>
    </button>
  </div>

  <div class="space-y-4">
    <div>
      <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :title, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150 ease-in-out", placeholder: "Enter subtask title" %>
    </div>

    <div>
      <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_area :description, rows: 2, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150 ease-in-out", placeholder: "Describe your subtask" %>
    </div>

    <div>
      <%= f.label :deadline, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.datetime_field :deadline, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150 ease-in-out" %>
    </div>

    <%= f.hidden_field :_destroy %>
  </div>
</div>
