<div class="relative min-h-screen">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0">
    <img src="https://images.unsplash.com/photo-1590402494587-44b71d7772f6?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
         class="w-full h-full object-cover"
         alt="Background">
    <div class="absolute inset-0 bg-gradient-to-r from-blue-900/80 to-purple-900/80"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10">
    <nav class="bg-white/10 backdrop-blur-md border-b border-white/20">
      <div class="container mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <span class="text-3xl font-bold text-white">
              TaskMaster
            </span>
          </div>
          <div class="hidden md:flex items-center space-x-8">
            <% if user_signed_in? %>
              <%= link_to "Dashboard", dashboard_path, class: "text-white hover:text-blue-200 transition duration-300" %>
              <%= link_to "My Tasks", tasks_path, class: "text-white hover:text-blue-200 transition duration-300" %>
              <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "px-6 py-2 bg-white/20 hover:bg-white/30 text-white rounded-lg backdrop-blur-sm transition duration-300" %>
            <% else %>
              <%= link_to "Sign In", new_user_session_path, class: "text-white hover:text-blue-200 transition duration-300" %>
              <%= link_to "Get Started", new_user_registration_path, class: "px-6 py-2 bg-white/20 hover:bg-white/30 text-white rounded-lg backdrop-blur-sm transition duration-300" %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <div class="container mx-auto px-4">
      <div class="flex flex-col items-center justify-center min-h-screen text-center">
        <div class="bg-white/10 backdrop-blur-md p-12 rounded-2xl shadow-2xl transform hover:scale-105 transition duration-300 border border-white/20">
          <h1 class="text-6xl font-extrabold text-white mb-6">
            Welcome to TaskMaster
          </h1>
          <p class="text-xl text-white/90 mb-8 max-w-2xl">
            Your intelligent task management solution. Organize, collaborate, and achieve more with our powerful tools.
          </p>

          <div class="space-y-4 md:flex md:space-y-0 md:space-x-4 justify-center">
            <% if user_signed_in? %>
              <%= link_to dashboard_path, class: "inline-block px-8 py-3 bg-white/20 hover:bg-white/30 text-white font-semibold rounded-lg backdrop-blur-sm shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition duration-300" do %>
                <i class="fas fa-tasks mr-2"></i>Go to Dashboard
              <% end %>
            <% else %>
              <%= link_to new_user_registration_path, class: "inline-block px-8 py-3 bg-white/20 hover:bg-white/30 text-white font-semibold rounded-lg backdrop-blur-sm shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition duration-300" do %>
                <i class="fas fa-user-plus mr-2"></i>Get Started
              <% end %>
              <%= link_to new_user_session_path, class: "inline-block px-8 py-3 bg-white/10 hover:bg-white/20 text-white font-semibold rounded-lg backdrop-blur-sm shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition duration-300 border border-white/20" do %>
                <i class="fas fa-sign-in-alt mr-2"></i>Sign In
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
